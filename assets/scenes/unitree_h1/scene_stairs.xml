<mujoco model="h1 stairs">
  <include file="h1.xml"/>

  <statistic center="2 0 0.5" extent="4"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="160" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    <material name="stair" rgba="0.45 0.55 0.65 1" reflectance="0.1"/>
    <material name="platform" rgba="0.35 0.45 0.55 1" reflectance="0.15"/>
    <material name="ramp" rgba="0.5 0.6 0.5 1" reflectance="0.1"/>
    <material name="wall" rgba="0.40 0.50 0.55 1" reflectance="0.1"/>
  </asset>

  <worldbody>
    <light pos="3 0 5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>

    <!-- ═══ Standard staircase (forward +X) ═══ -->
    <!-- 6 steps: each 0.15m high, 0.28m deep, 1.0m wide (human-scale) -->
    <geom type="box" size="0.14 0.50 0.075"  pos="1.20 0 0.075"  material="stair"/>
    <geom type="box" size="0.14 0.50 0.150"  pos="1.48 0 0.150"  material="stair"/>
    <geom type="box" size="0.14 0.50 0.225"  pos="1.76 0 0.225"  material="stair"/>
    <geom type="box" size="0.14 0.50 0.300"  pos="2.04 0 0.300"  material="stair"/>
    <geom type="box" size="0.14 0.50 0.375"  pos="2.32 0 0.375"  material="stair"/>
    <geom type="box" size="0.14 0.50 0.450"  pos="2.60 0 0.450"  material="stair"/>

    <!-- Top platform -->
    <geom type="box" size="0.40 0.60 0.45" pos="3.10 0 0.45" material="platform"/>

    <!-- Descending stairs -->
    <geom type="box" size="0.14 0.50 0.375"  pos="3.60 0 0.375"  material="stair"/>
    <geom type="box" size="0.14 0.50 0.300"  pos="3.88 0 0.300"  material="stair"/>
    <geom type="box" size="0.14 0.50 0.225"  pos="4.16 0 0.225"  material="stair"/>
    <geom type="box" size="0.14 0.50 0.150"  pos="4.44 0 0.150"  material="stair"/>
    <geom type="box" size="0.14 0.50 0.075"  pos="4.72 0 0.075"  material="stair"/>

    <!-- ═══ Ramp (left side, +Y) ═══ -->
    <geom type="box" size="0.60 0.30 0.008" pos="0 1.20 0.18"
      euler="0 15 0" material="ramp"/>
    <geom type="box" size="0.25 0.30 0.18" pos="-0.70 1.20 0.18" material="platform"/>

    <!-- ═══ Low hurdles ═══ -->
    <geom type="box" size="0.02 0.40 0.08" pos="-1.20 0 0.08" material="wall"/>
    <geom type="box" size="0.02 0.40 0.10" pos="-1.80 0 0.10" material="wall"/>
    <geom type="box" size="0.02 0.40 0.08" pos="-2.40 0 0.08" material="wall"/>

    <!-- ═══ Narrow walkway ═══ -->
    <geom type="box" size="0.02 1.00 0.15" pos="0  -1.00 0.15" material="wall"/>
    <geom type="box" size="0.02 1.00 0.15" pos="0  -1.50 0.15" material="wall"/>
  </worldbody>

  <keyframe>
    <key name="home"
      qpos="
    0 0 0.98
    1 0 0 0
    0 0 -0.4 0.8 -0.4
    0 0 -0.4 0.8 -0.4
    0
    0 0 0 0
    0 0 0 0"/>
  </keyframe>
</mujoco>
