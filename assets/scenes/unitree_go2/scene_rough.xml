<mujoco model="go2 rough terrain">
  <include file="go2.xml"/>

  <statistic center="0.5 0 0.1" extent="2"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="-130" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    <material name="rock" rgba="0.50 0.45 0.40 1" reflectance="0.05"/>
    <material name="obstacle" rgba="0.60 0.35 0.30 1" reflectance="0.1"/>
    <material name="wall" rgba="0.40 0.50 0.55 1" reflectance="0.1"/>
    <material name="gap_plat" rgba="0.45 0.50 0.45 1" reflectance="0.1"/>
  </asset>

  <worldbody>
    <light pos="2 0 3" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>

    <!-- ═══ Random bumps (uneven terrain zone) ═══ -->
    <!-- Scattered low boxes with slight tilts to simulate rough ground -->
    <geom type="box" size="0.08 0.10 0.015" pos="0.30  0.05 0.015" euler="0 2 5"   material="rock"/>
    <geom type="box" size="0.06 0.08 0.020" pos="0.50 -0.08 0.020" euler="3 0 -4"  material="rock"/>
    <geom type="box" size="0.10 0.06 0.012" pos="0.45  0.15 0.012" euler="-2 1 3"  material="rock"/>
    <geom type="box" size="0.07 0.09 0.018" pos="0.70  0.02 0.018" euler="1 -3 2"  material="rock"/>
    <geom type="box" size="0.09 0.07 0.025" pos="0.65 -0.15 0.025" euler="-1 2 -3" material="rock"/>
    <geom type="box" size="0.05 0.12 0.010" pos="0.90  0.10 0.010" euler="2 0 1"   material="rock"/>
    <geom type="box" size="0.08 0.08 0.022" pos="0.85 -0.10 0.022" euler="0 3 -2"  material="rock"/>
    <geom type="box" size="0.11 0.05 0.014" pos="1.10  0.00 0.014" euler="-3 1 0"  material="rock"/>
    <geom type="box" size="0.06 0.10 0.020" pos="1.05  0.18 0.020" euler="1 -2 4"  material="rock"/>
    <geom type="box" size="0.07 0.07 0.016" pos="1.30 -0.05 0.016" euler="2 1 -1"  material="rock"/>

    <!-- ═══ Hurdles (small walls to step over) ═══ -->
    <geom type="box" size="0.01 0.20 0.035" pos="-0.40  0.00 0.035" material="obstacle"/>
    <geom type="box" size="0.01 0.20 0.045" pos="-0.70  0.00 0.045" material="obstacle"/>
    <geom type="box" size="0.01 0.20 0.035" pos="-1.00  0.00 0.035" material="obstacle"/>
    <geom type="box" size="0.01 0.20 0.050" pos="-1.30  0.00 0.050" material="obstacle"/>

    <!-- ═══ Narrow corridor ═══ -->
    <!-- Two parallel walls, gap ~0.25m (Go2 width ~0.19m) -->
    <geom type="box" size="0.40 0.01 0.08" pos="0.00  0.55 0.08" material="wall"/>
    <geom type="box" size="0.40 0.01 0.08" pos="0.00  0.80 0.08" material="wall"/>

    <!-- ═══ Gap crossing (two platforms with space between) ═══ -->
    <geom type="box" size="0.15 0.25 0.05" pos="-0.40 -0.55 0.05" material="gap_plat"/>
    <geom type="box" size="0.15 0.25 0.05" pos="-0.15 -0.55 0.05" material="gap_plat"/>
    <!-- Gap of ~0.10m between platforms -->
    <geom type="box" size="0.15 0.25 0.05" pos="0.15  -0.55 0.05" material="gap_plat"/>

    <!-- ═══ Tilted platforms ═══ -->
    <geom type="box" size="0.12 0.12 0.005" pos="1.50 0.30 0.04" euler="0 8 0"  material="rock"/>
    <geom type="box" size="0.12 0.12 0.005" pos="1.50 -0.30 0.04" euler="0 -6 15" material="rock"/>
    <geom type="box" size="0.15 0.10 0.005" pos="1.80 0.00 0.06" euler="5 0 0"  material="rock"/>

    <!-- ═══ Random large stones ═══ -->
    <geom type="sphere" size="0.04" pos="0.35 -0.25 0.04" material="rock"/>
    <geom type="sphere" size="0.03" pos="0.55  0.25 0.03" material="rock"/>
    <geom type="sphere" size="0.035" pos="0.80 -0.22 0.035" material="rock"/>
    <geom type="sphere" size="0.045" pos="1.15  0.28 0.045" material="rock"/>
    <geom type="ellipsoid" size="0.05 0.03 0.02" pos="1.00 -0.30 0.02" euler="0 0 30" material="rock"/>
  </worldbody>
</mujoco>
