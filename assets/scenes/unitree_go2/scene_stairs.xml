<mujoco model="go2 stairs">
  <include file="go2.xml"/>

  <statistic center="1 0 0.2" extent="2"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="-130" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    <material name="stair" rgba="0.45 0.55 0.65 1" reflectance="0.1"/>
    <material name="platform" rgba="0.35 0.45 0.55 1" reflectance="0.15"/>
    <material name="ramp" rgba="0.5 0.6 0.5 1" reflectance="0.1"/>
  </asset>

  <worldbody>
    <light pos="2 0 3" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>

    <!-- ═══ Ascending stairs (forward +X) ═══ -->
    <!-- 8 steps: each 0.04m high, 0.12m deep, 0.5m wide -->
    <geom type="box" size="0.06 0.25 0.02"  pos="0.50 0 0.02"  material="stair"/>
    <geom type="box" size="0.06 0.25 0.04"  pos="0.62 0 0.04"  material="stair"/>
    <geom type="box" size="0.06 0.25 0.06"  pos="0.74 0 0.06"  material="stair"/>
    <geom type="box" size="0.06 0.25 0.08"  pos="0.86 0 0.08"  material="stair"/>
    <geom type="box" size="0.06 0.25 0.10"  pos="0.98 0 0.10"  material="stair"/>
    <geom type="box" size="0.06 0.25 0.12"  pos="1.10 0 0.12"  material="stair"/>
    <geom type="box" size="0.06 0.25 0.14"  pos="1.22 0 0.14"  material="stair"/>
    <geom type="box" size="0.06 0.25 0.16"  pos="1.34 0 0.16"  material="stair"/>

    <!-- Top platform -->
    <geom type="box" size="0.20 0.30 0.16" pos="1.60 0 0.16" material="platform"/>

    <!-- ═══ Descending stairs (continue +X) ═══ -->
    <geom type="box" size="0.06 0.25 0.14"  pos="1.86 0 0.14"  material="stair"/>
    <geom type="box" size="0.06 0.25 0.12"  pos="1.98 0 0.12"  material="stair"/>
    <geom type="box" size="0.06 0.25 0.10"  pos="2.10 0 0.10"  material="stair"/>
    <geom type="box" size="0.06 0.25 0.08"  pos="2.22 0 0.08"  material="stair"/>
    <geom type="box" size="0.06 0.25 0.06"  pos="2.34 0 0.06"  material="stair"/>
    <geom type="box" size="0.06 0.25 0.04"  pos="2.46 0 0.04"  material="stair"/>
    <geom type="box" size="0.06 0.25 0.02"  pos="2.58 0 0.02"  material="stair"/>

    <!-- ═══ Side ramp (left, +Y direction) ═══ -->
    <!-- Ramp up: inclined box -->
    <geom type="box" size="0.30 0.15 0.005" pos="0 0.55 0.08"
      euler="0 10 0" material="ramp"/>

    <!-- Ramp platform -->
    <geom type="box" size="0.12 0.15 0.085" pos="-0.35 0.55 0.085" material="platform"/>

    <!-- ═══ Stepping stones (right side, -Y) ═══ -->
    <geom type="box" size="0.06 0.06 0.03" pos="0.40 -0.45 0.03" material="stair"/>
    <geom type="box" size="0.06 0.06 0.05" pos="0.60 -0.50 0.05" material="stair"/>
    <geom type="box" size="0.06 0.06 0.04" pos="0.80 -0.42 0.04" material="stair"/>
    <geom type="box" size="0.06 0.06 0.06" pos="1.00 -0.48 0.06" material="stair"/>
    <geom type="box" size="0.06 0.06 0.03" pos="1.20 -0.44 0.03" material="stair"/>
    <geom type="box" size="0.06 0.06 0.05" pos="1.40 -0.50 0.05" material="stair"/>

    <!-- ═══ Narrow bridge ═══ -->
    <geom type="box" size="0.40 0.05 0.06" pos="0 -0.90 0.06" material="platform"/>
  </worldbody>
</mujoco>
